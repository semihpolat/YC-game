{
	"name": "statue-ssg",
	"version": "0.2.12",
	"description": "A simple static site generator for markdown content with SvelteKit",
	"type": "module",
	"main": "src/index.js",
	"svelte": "src/lib/index.ts",
	"exports": {
		".": {
			"types": "./src/lib/index.ts",
			"svelte": "./src/lib/index.ts",
			"default": "./src/index.js"
		},
		"./cms/*": "./src/lib/cms/*",
		"./components": {
			"types": "./src/lib/index.ts",
			"svelte": "./src/lib/index.ts"
		},
		"./components/*": "./src/lib/components/*",
		"./themes/*": "./src/lib/themes/*",
		"./styles.css": "./src/lib/index.css",
		"./package.json": "./package.json"
	},
	"bin": {
		"statue-setup": "./postinstall.js",
		"statue": "./scripts/statue-cli.js"
	},
	"files": [
		"src",
		"content",
		"static",
		"templates",
		"svelte.config.js",
		"vite.config.js",
		"tailwind.config.js",
		"postcss.config.js",
		"site.config.js",
		"postinstall.js",
		"scripts",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "node scripts/generate-seo-files.js",
		"preview": "vite preview",
		"prepublishOnly": "npm run build",
		"setup": "node postinstall.js",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"release": "npm run build && npm publish",
		"test:local": "./test/hermetic/test_local.sh",
		"docker:build": "cd test/hermetic && docker build -t statue-ssg .",
		"docker:test": "npm run docker:build && npm run test:local",
		"template:load": "node scripts/manage-templates.js load",
		"template:save": "node scripts/manage-templates.js save",
		"template:list": "node scripts/manage-templates.js list"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tailwindcss/postcss": "^4.1.14",
		"@types/node": "^22.13.13",
		"autoprefixer": "^10.4.21",
		"esbuild": "^0.20.2",
		"postcss": "^8.5.3",
		"rimraf": "^5.0.10",
		"svelte": "^4.2.7",
		"svelte-sitemap": "^2.7.0",
		"typescript": "^5.0.0",
		"vite": "^5.4.11"
	},
	"dependencies": {
		"@google/genai": "^1.30.0",
		"@types/d3": "^7.4.3",
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"d3": "^7.9.0",
		"fs-extra": "^11.3.0",
		"gray-matter": "^4.0.3",
		"lucide-svelte": "^0.555.0",
		"marked": "^15.0.7"
	},
	"keywords": [
		"static-site-generator",
		"markdown",
		"ssg",
		"sveltekit",
		"static-site",
		"content-management"
	],
	"author": "Semih Polat",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/accretional/statue.git"
	},
	"bugs": {
		"url": "https://github.com/accretional/statue/issues"
	},
	"homepage": "https://github.com/accretional/statue#readme"
}
